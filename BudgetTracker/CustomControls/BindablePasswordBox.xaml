<UserControl x:Class="BudgetTracker.View.CustomControls.BindablePasswordBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BudgetTracker.View.CustomControls"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="800">
    <PasswordBox x:Name="txtPassBox" FontSize="13" FontWeight="Medium" FontFamily="Montserrat"
         Foreground="White" CaretBrush="LightGray"
         BorderBrush="DarkGray" BorderThickness="0,0,0,2"
          VerticalAlignment="Center" 
         Padding="30,0,0,0">
        <PasswordBox.Background>
            <ImageBrush ImageSource="/BudgetTracker.View;component/Images/lock.png" Stretch="Uniform" AlignmentX="Left" Opacity="0.5"/>
        </PasswordBox.Background>
    </PasswordBox>
</UserControl>
